<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox
	BorderPane.alignment="CENTER"
	xmlns="http://javafx.com/javafx/"
	xmlns:fx="http://javafx.com/fxml/"
	fx:controller="controllers.GraphConfigController">
	<children>
		<AnchorPane>
			<children>
				<Label
					alignment="CENTER"
					contentDisplay="CENTER"
					text="%graphconfig.header"
					textAlignment="RIGHT"
					AnchorPane.bottomAnchor="0.0"
					AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="0.0">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
			</children>
			<padding>
				<Insets
					bottom="7.0"
					left="7.0"
					right="7.0"
					top="7.0" />
			</padding>
		</AnchorPane>
		<Separator />
		<ScrollPane
			fitToHeight="true"
			fitToWidth="true"
			hbarPolicy="NEVER"
			VBox.vgrow="ALWAYS">
			<content>
				<AnchorPane>
					<children>
						<Accordion
							AnchorPane.bottomAnchor="0.0"
							AnchorPane.leftAnchor="0.0"
							AnchorPane.rightAnchor="0.0"
							AnchorPane.topAnchor="0.0">
							<panes>
								<TitledPane
									animated="true"
									text="%graphconfig.config1.header">
									<content>
										<AnchorPane>
											<children>
												<VBox
													spacing="15.0"
													AnchorPane.bottomAnchor="0.0"
													AnchorPane.leftAnchor="0.0"
													AnchorPane.rightAnchor="0.0"
													AnchorPane.topAnchor="0.0">
													<children>
														<AnchorPane>
															<children>
																<Label
																	text="%graphconfig.config1.select"
																	AnchorPane.bottomAnchor="0.0"
																	AnchorPane.leftAnchor="0.0"
																	AnchorPane.rightAnchor="0.0"
																	AnchorPane.topAnchor="0.0" />
															</children>
														</AnchorPane>
														<AnchorPane>
															<children>
																<JFXComboBox
																	fx:id="algorithmnSelect"
																	onAction="#algorithmnSelectAction"
																	AnchorPane.bottomAnchor="0.0"
																	AnchorPane.leftAnchor="0.0"
																	AnchorPane.rightAnchor="0.0"
																	AnchorPane.topAnchor="0.0" />
															</children>
														</AnchorPane>

														<Label text="%graphconfig.config1.number" />
														<JFXSlider
															fx:id="numberClusters"
															majorTickUnit="5.0"
															max="30.0"
															showTickLabels="true"
															showTickMarks="true"
															value="1.0"
															VBox.vgrow="ALWAYS" />
													</children>
												</VBox>
											</children>
										</AnchorPane>
									</content>
								</TitledPane>
								<TitledPane
									animated="true"
									text="%graphconfig.config2.header">
									<content>
										<AnchorPane>
											<children>
												<VBox
													fx:id="priorities"
													spacing="10.0"
													AnchorPane.bottomAnchor="0.0"
													AnchorPane.leftAnchor="0.0"
													AnchorPane.rightAnchor="0.0"
													AnchorPane.topAnchor="0.0">
												</VBox>
											</children>
										</AnchorPane>
									</content>
								</TitledPane>
								<TitledPane
									animated="true"
									text="%graphconfig.config3.header">
									<content>
										<AnchorPane>
											<children>
												<VBox
													AnchorPane.bottomAnchor="0.0"
													AnchorPane.leftAnchor="0.0"
													AnchorPane.rightAnchor="0.0"
													AnchorPane.topAnchor="0.0">
													<children>
														<JFXToggleButton
															fx:id="showLabels"
															VBox.vgrow="ALWAYS"
															text="%graphconfig.config3.showLabels" />
													</children>
												</VBox>
											</children>
										</AnchorPane>
									</content>
								</TitledPane>
							</panes>
						</Accordion>
					</children>
				</AnchorPane>
			</content>
		</ScrollPane>
		<Separator />
		<AnchorPane>
			<children>
				<JFXButton
					fx:id="execute"
					onAction="#executeSolveAction"
					buttonType="RAISED"
					ripplerFill="#0037ff"
					text="%graphconfig.exec"
					AnchorPane.bottomAnchor="0.0"
					AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="0.0"
					styleClass="jfx-button-raised" />
			</children>
			<padding>
				<Insets
					bottom="7.0"
					top="7.0" />
			</padding>
		</AnchorPane>
	</children>
</VBox>